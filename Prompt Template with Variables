import OpenAI from "openai";

const client = new OpenAI({
  apiKey: process.env.AZURE_OPENAI_KEY,
  baseURL: "https://YOUR-RESOURCE.openai.azure.com/openai/deployments/YOUR-MODEL"
});

async function generateSummary(text, tone) {
  const template = `
  Summarize the following text in a ${tone} tone:
  "${text}"
  `;

  const response = await client.chat.completions.create({
    model: "gpt-4o-mini",
    messages: [{ role: "user", content: template }]
  });

  return response.choices[0].message.content;
}

generateSummary("Azure OpenAI enables enterprise-grade AI.", "professional")
  .then(console.log);
